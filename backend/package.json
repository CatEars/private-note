{
    "name": "private-note-backend",
    "version": "0.4.0",
    "description": "Backend for private-note app",
    "main": "dist/src/index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll",
        "docker:test:build": "docker-compose build test-runner",
        "docker:test:watch": "docker-compose run test-runner",
        "build": "rm -rf dist && tsc && cp -r src/thirdparty dist/src/thirdparty",
        "start": "docker-compose up app",
        "docker:internal:run": "nodemon",
        "preversion": "npm run build"
    },
    "keywords": [],
    "author": "catears",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/express-pino-logger": "^4.0.2",
        "@types/jest": "^24.9.1",
        "@types/lodash": "^4.14.136",
        "@types/node": "^12.6.9",
        "@types/pino": "^5.15.1",
        "@types/uuid": "^3.4.6",
        "jest": "^26.0.1",
        "lodash": "^4.17.15",
        "nodemon": "^2.0.2",
        "ts-jest": "^26.0.0",
        "ts-node": "^8.5.4",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "express-rate-limit": "^5.0.0",
        "helmet": "^3.21.2",
        "pino": "^5.15.0",
        "pino-pretty": "^3.5.0",
        "uuid": "^3.3.3"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "nodemonConfig": {
        "ignore": [
            "test/*",
            "static/*"
        ],
        "delay": 2500,
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node ./src/index.ts"
    }
}
